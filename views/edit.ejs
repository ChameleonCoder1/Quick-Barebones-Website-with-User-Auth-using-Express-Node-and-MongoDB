<% include partials/header.ejs %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= thisPost.company_name %> - <%= thisPost.city %></div>

    <form class="ui form" action="/update/<%= thisPost._id %>?_method=PUT" method="POST">
        <div class="ui large header">Company Information</div>
        <div class="field">
            <label>City</label>
            <input type="text" name="city" value="<%= thisPost.city %>">
        </div>
        <div class="field">
            <label>Company Name</label>
            <input type="text" name="company_name" value="<%= thisPost.company_name%>">
        </div>
        <div class="field">
            <label>Address</label>
            <input type="text" name="location" value="<%= thisPost.location %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="thumbnail_image" value="<%= thisPost.thumbnail_image %>">
        </div>
        <div class="field">
            <label>URL</label>
            <input type="text" name="url" value="<%= thisPost.url %>">
        </div>

        <button class="ui button" type="submit">Submit</button>
    </form>




<% include partials/footer.ejs %>
